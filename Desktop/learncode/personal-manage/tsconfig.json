{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "noImplicitAny": false
  },
  "exclude": ["dist", "node_modules"]
  // "include": ["src/**/*.ts", "src/**/*.d.ts"] // .ts, .d.ts全局可访问
}
